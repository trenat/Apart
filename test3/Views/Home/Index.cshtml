@model IEnumerable<test3.Models.HomeViewModels.HomeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        @*<div class="item active">
            <img src="~/images/banner1.svg" alt="Visual Studio" class="img-responsive" />

            <div class="carousel-caption" role="option">
                <p>
                    Learn how to build ASP.NET apps that can run anywhere.
                    <a class="btn btn-default" asp-action="Index">
                        Sprawdź!
                    </a>
                </p>
            </div>
        </div>*@
        
        @{var i=0;}
        @foreach (var item in Model)
        {
            @if (i == 0)
             {
                 <div class="item active">
                     <img src=@Url.Content(item.ImagePath) alt="Visual Studio" class="img-responsive"/>
                     <div class="carousel-caption" role="option">
                         <p>
                             @Html.DisplayFor(modelItem => item.ApartmentPrice) zł!
                             <a class="btn btn-default" asp-controller="Apartments" asp-action="Details"  asp-route-id="@item.ID">
                                 Sprawdź!
                             </a>
                         </p>
                     </div>
                 </div>
             }
            else
            {
                <div class="item">
                    <img src=@Url.Content(item.ImagePath) alt="Visual Studio" class="img-responsive"/>
                    <div class="carousel-caption" role="option">
                        <p>
                            @Html.DisplayFor(modelItem => item.ApartmentPrice) zł!
                            <a class="btn btn-default" asp-action="Index">
                                Sprawdź!
                            </a>
                        </p>
                    </div>
                </div>
            }

            i += 1;

        }
      
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
