@model test3.Models.AdminViewModels.PasswordResetModel  

@{
    ViewData["Title"] = "PasswordReset";
}

<h2>PasswordReset</h2>


<form asp-action="PasswordReset">
    <div class="form-horizontal">
        <h4>Zresetuj hasło użytkownika </h4>        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label" >New Password</label>>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


